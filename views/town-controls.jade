include ./header.jade

script(src="/json.js")
		
#container.container
		h6.instructions
			a(href="https://docs.google.com/document/d/1BjqkJ2OBo47FrYEVMpwbxoaB-GOSuUFA1wktSfEJQe0/edit?usp=sharing")= t("booklet")
		.tryAgain
			p= t("gameOver")
			p
				a(href="/new_town")= t("tryAgain")
		#controls
			form(method="post")#mainForm
				.row
						.col-sm-3
								h5
									= t("Week")
									| &nbsp;
									span#week 0
						.col-sm-3
								h5
									= t("Score")
									| &nbsp;
									span#score ...
						.col-sm-2
								h6
									= t("Inhabitants")
									| &nbsp;
									span#inhabitants 0
						.col-sm-2
								h6
									= t("Idles")
									| &nbsp;
									span#idles 0
						.col-sm-2
								h6
									= t("Sheeps")
									| &nbsp;
									span#sheeps 0
									br
									button(id="killSheep")= t("Butcher")
					
				.row
						.col-md-3
								table.controls
										tr
												td.labels
														label.controls= t("Gatherers")
												td.inputs
														p.inputs
																input(type="number", name="gatherers", id="gatherers_control")
																a(href="#", data-toggle="popover", data-content=t("gatherersTip"), data-trigger="focus", data-placement="top")
																		span.glyphicon.glyphicon-question-sign
														p.counters
																= t("Food")
																| &nbsp;
																span#food 0
						.col-md-3
								table.controls
										tr
												td.labels
														label.controls= t("Builders")
												td.inputs
														p.inputs
																input(type="number", name="builders", id="builders_control")
																a(href="#", data-toggle="popover", data-content=t("buildersTip"), data-trigger="focus", data-placement="top")
																		span.glyphicon.glyphicon-question-sign
														p.counters
																= t("Structure")
																| &nbsp;
																span#structure 0
						.col-md-3
								table.controls
										tr
												td.labels
														label.controls= t("Defenders")
												td.inputs
														p.inputs
																input(type="number", name="defenders", id="defenders_control")
																a(href="#", data-toggle="popover", data-content=t("defendersTip"), data-trigger="focus", data-placement="top")
																		span.glyphicon.glyphicon-question-sign
														p.counters
																= t("Safety")
																| &nbsp;
																span#safety 0
						.col-md-3
								table.controls
										tr
												td.labels
														label.controls= t("Cleaners")
												td.inputs
														p.inputs
																input(type="number", name="cleaners", id="cleaners_control")
																a(href="#", data-toggle="popover", data-content=t("cleanersTip"), data-trigger="focus", data-placement="top")
																		span.glyphicon.glyphicon-question-sign
														p.counters
																= t("Garbage")
																| &nbsp;
																span#garbage 0
																| %
				.row
						.col-sm-6
							label= t("allowForeigners")
							input(type="checkbox", name="allowForeigners", id="allowForeigners_control")
						.col-sm-6
								input(type="hidden", id="town_id", name="town_id", value="#{town_id}")
								button(id="next_week")= t("endTurn")
				
		#reports
			